# Movie Agent Service Configuration
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to git (it's in .gitignore)

# ============================================
# REQUIRED: API Keys
# ============================================

# OpenAI API Key (Required for embeddings)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Groq API Key (Required for LLM)
# Get from: https://console.groq.com/keys
GROQ_API_KEY=your_groq_api_key_here

# ============================================
# OPTIONAL: Data Paths
# ============================================

# Path to movies CSV file
MOVIE_DATA_CSV_PATH=data/movies.csv

# Path to FAISS vector store directory
VECTOR_STORE_PATH=movie_vectorstore

# ============================================
# OPTIONAL: LLM Configuration
# ============================================

# LLM Provider: "groq" or "openai"
LLM_PROVIDER=groq

# LLM Model name
# Groq: "llama-3.1-8b-instant", "llama-3.1-70b-versatile", etc.
# OpenAI: "gpt-4", "gpt-3.5-turbo", etc.
LLM_MODEL=llama-3.1-8b-instant

# ============================================
# OPTIONAL: Embedding Configuration
# ============================================

# Embedding Provider: "openai" (default) or "huggingface"
EMBEDDING_PROVIDER=openai

# ============================================
# OPTIONAL: Vision Configuration
# ============================================

# Enable vision/poster analysis
ENABLE_VISION=true

# Vision model name (BLIP)
VISION_MODEL_NAME=Salesforce/blip-image-captioning-base

# Optional: Local path to vision model
VISION_MODEL_PATH=

# ============================================
# OPTIONAL: Semantic Resolution (Fuzzy Matching)
# ============================================

# Enable fuzzy matching for query correction
ENABLE_FUZZY_MATCHING=true

# Fuzzy match threshold (0.0-1.0)
FUZZY_THRESHOLD=0.75

# Resolution confidence threshold (0.0-1.0)
RESOLUTION_CONFIDENCE_THRESHOLD=0.75

# ============================================
# OPTIONAL: Performance
# ============================================

# Warmup agent on startup
WARMUP_ON_START=true

# Verbose logging
VERBOSE=false
